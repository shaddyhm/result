{
  "name": "mocha tests",
  "type": "node",
  "protocol": "inspector",
  "request": "launch",
  "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
  "stopOnEntry": false,
  "args": [
    "-r",
    "ts-node",
    "${workspaceRoot}/test/**/*.spec.ts",
    "--no-timeouts"
  ],
  "cwd": "${workspaceRoot}"
}
